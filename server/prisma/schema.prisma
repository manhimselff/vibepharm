datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("clerk")
  createdAt DateTime @default(now())
}

model Drug {
  id            Int      @id @default(autoincrement())
  name          String
  description   String?
  price         Float
  stock         Int
  manufacturer  String
  category      String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}