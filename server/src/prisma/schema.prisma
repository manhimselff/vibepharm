datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("clerk")
  createdAt DateTime @default(now())
  sales     Sale[]
}

model Drug {
  id         Int      @id @default(autoincrement())
  name       String
  category   String
  quantity   Int
  price      Float
  expiryDate DateTime
  createdAt  DateTime @default(now())
  sales      Sale[]
}

model Sale {
  id        Int      @id @default(autoincrement())
  drugId    Int
  quantity  Int
  total     Float
  soldBy    Int
  createdAt DateTime @default(now())

  drug      Drug     @relation(fields: [drugId], references: [id])
  seller    User     @relation(fields: [soldBy], references: [id])
}